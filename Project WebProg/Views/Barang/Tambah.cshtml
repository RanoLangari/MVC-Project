@model List<Project_WebProg.Models.BarangModel>
@{
    ViewBag.Title = "Tambah";
}
<div>
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 82vh;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            background: none;
        }

        .glow-on-hover {
            width: 220px;
            height: 50px;
            border: none;
            outline: none;
            color: #fff;
            background: #111;
            cursor: pointer;
            position: relative;
            z-index: 0;
            border-radius: 10px;
        }

            .glow-on-hover:before {
                content: '';
                background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
                position: absolute;
                top: -2px;
                left: -2px;
                background-size: 400%;
                z-index: -1;
                filter: blur(5px);
                width: calc(100% + 4px);
                height: calc(100% + 4px);
                animation: glowing 20s linear infinite;
                opacity: 0;
                transition: opacity .3s ease-in-out;
                border-radius: 10px;
            }

            .glow-on-hover:active {
                color: #000
            }

                .glow-on-hover:active:after {
                    background: transparent;
                }

            .glow-on-hover:hover:before {
                opacity: 1;
            }

            .glow-on-hover:after {
                z-index: -1;
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: #111;
                left: 0;
                top: 0;
                border-radius: 10px;
            }

        .keyframes glowing {
            0%

        {
            background-position: 0 0;
        }

        50% {
            background-position: 400% 0;
        }

        100% {
            background-position: 0 0;
        }
        }
    </style>
</div>



<div class="form-horizontal">
    @using (Html.BeginForm())
    {

        <div class="form-group">
            <label class="col-md-2">Kode Barang</label>
            @Html.TextBox("KodeBarang", null, new { @class = "form-control col-lg-4" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Nama Barang</label>
            @Html.TextBox("NamaBarang", null, new { @class = "form-control col-lg-4" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Jumlah</label>
            @Html.TextBox("Jumlah", null, new { @class = "form-control col-lg-4" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Keterangan</label>
            @Html.TextBox("Keterangan", null, new { @class = "form-control col-lg-4" })
        </div>
        <div>
            <br />
            <br />
            <button type="submit" class="glow-on-hover">Simpan</button>
        </div>



    }
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}

