@model List<Project_WebProg.Models.BarangModel>
@{
    ViewBag.Title = "Edit";
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}

<br />
<br />
<div class="form-horizontal">
    @using (Html.BeginForm())
    {

        <div class="form-group">
            <label class="col-md-2">Kode Barang</label>
            @Html.TextBox("KodeBarang", null, new { @class = "form-control col-lg-4" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Nama Barang</label>
            @Html.TextBox("NamaBarang", null, new { @class = "form-control col-lg-4" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Jumlah</label>
            @Html.TextBox("Jumlah", null, new { @class = "form-control col-lg-4" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Keterangan</label>
            @Html.TextBox("Keterangan", null, new { @class = "form-control col-lg-4" })
        </div>
        <button type="submit" class="btn btn-default">Simpan</button>
    }
</div>

